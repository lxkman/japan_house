<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.japanhouse.fragment.home.BusinessDichanActivity">
    <RelativeLayout
        android:background="@color/shihuangse"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:id="@+id/title_back_iv"
            android:src="@drawable/back"
            android:padding="15dp"
            android:layout_width="50dip"
            android:layout_height="50dip" />
        <TextView
            android:id="@+id/title_content_tv"
            android:text="海外地产"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_search">
                <ImageView
                    android:layout_marginLeft="15dip"
                    android:src="@drawable/sousuo"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_toLeftOf="@+id/search_et"/>
                <TextView
                    android:id="@+id/search_et"
                    android:background="@null"
                    android:paddingLeft="10dip"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:hint="请输入国家地区或房源名称"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fenlei_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray1" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/view_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猜你喜欢"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_toLeftOf="@+id/view_12"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_toRightOf="@+id/view_12"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/like_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
