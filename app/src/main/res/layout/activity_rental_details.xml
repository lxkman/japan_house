<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/act_rental_details_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/act_rental_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_owner_rental"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/act_rental_details_liner_rentalState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_rentalState"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_rentalState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_refuseReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_refuseReason"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_refuseReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格太高了"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_lessorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_lessorName"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_lessorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姜先生"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_lessorPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_lessorPhone"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_lessorPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678901"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_location"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北海道"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_distance"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10公里内"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_floor"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12层"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_area"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150㎡-175㎡"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_pattern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_pattern"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3室1厅"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_bathroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_bathroomTogether"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_bathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_toward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_toward"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_toward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南向"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_equipment"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/act_rental_details_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咖啡厅、台球场、篮球场"
                    android:textColor="#2A2A2A"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_roomPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_roomPic"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <com.example.administrator.japanhouse.view.HeightGridView
                    android:id="@+id/act_rental_details_roomPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:horizontalSpacing="8dp"
                    android:numColumns="3"
                    android:verticalSpacing="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rental_details_liner_roomVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_rental_roomVideo"
                    android:textColor="#999999"
                    android:textSize="14sp" />


                <com.example.administrator.japanhouse.view.HeightGridView
                    android:id="@+id/act_rental_details_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:horizontalSpacing="8dp"
                    android:numColumns="3"
                    android:verticalSpacing="8dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>