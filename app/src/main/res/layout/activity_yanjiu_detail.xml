<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.japanhouse.fragment.home.YanjiuDetailActivity">
    <RelativeLayout
        android:background="@color/shihuangse"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip">
        <ImageView
            android:id="@+id/title_back_iv"
            android:src="@drawable/back"
            android:padding="15dp"
            android:layout_width="50dip"
            android:layout_height="50dip" />
        <TextView
            android:id="@+id/title_content_tv"
            android:text="@string/xiangqing"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是标题"
            android:padding="15dp"
            android:textColor="@color/text_black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018.04.24  14:20:55"
            android:paddingLeft="15dp"/>
        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:text="面对安顺达科技大厦的空间哈实打实的狂欢节ad卡拉大家撒了肯定就爱上了肯德基奥斯卡来得及爱上了肯德基阿拉山口大家爱睡懒觉克拉数据大路上看见的卢卡斯的教案设计的"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/text_black"/>
    </LinearLayout>
</LinearLayout>
