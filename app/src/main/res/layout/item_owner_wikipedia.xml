<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/item_owner_wikipedia_lt"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_owner_wikipedia_img"
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/apartment_icon"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="16dp"
            >

            <TextView
                android:id="@+id/item_owner_wikipedia_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="百科标题内容百科标题内容百科标题内容百科标题内容百科标题丢…"
                />

            <TextView
                android:id="@+id/item_owner_wikipedia_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_alignParentBottom="true"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/shijian"
                android:text="01.22"
                />

            <TextView
                android:id="@+id/item_owner_wikipedia_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_alignBottom="@id/item_owner_wikipedia_time"
                android:layout_toRightOf="@id/item_owner_wikipedia_time"
                android:layout_marginLeft="25dp"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/chakan"
                android:text="1000人查看"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>