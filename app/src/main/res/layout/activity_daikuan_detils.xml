<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.administrator.japanhouse.fragment.home.ui.activity.DaikuanDetilsActivity">
    <RelativeLayout
        android:id="@+id/liner"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_beak"
            android:src="@drawable/img_beak"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daikuanxiangqing"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <View
        android:id="@+id/xian"
        android:layout_below="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray1"/>

    <TextView
        android:layout_below="@+id/xian"
        android:id="@+id/dai_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daikuanmingc"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="10dp"
        />
    <View
        android:id="@+id/xian1"
        android:layout_below="@+id/dai_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray1"/>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_below="@+id/xian1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/yuexi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuexi"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_below="@+id/yuexi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daikuanlilv"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="1dp"
            android:layout_weight="0.01"
            android:layout_height="50dp"
            android:background="@color/gray1"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高200万"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_below="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fanweiedu"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="1dp"
            android:layout_weight="0.01"
            android:layout_height="50dp"
            android:background="@color/gray1"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nianxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-36年"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_below="@+id/nianxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zuigaonianxian"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/xian3"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray1"/>

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_below="@+id/xian3"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fangkuanfangshi"
            />
        <TextView
            android:textSize="14sp"
            android:id="@+id/fk_fangshi"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天内"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/liner2"
        android:id="@+id/liner3"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haikuanshijian"
            />
        <TextView
            android:id="@+id/hk_time"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随借随还"
            />
    </LinearLayout>
      <View
          android:id="@+id/xian4"
          android:layout_below="@+id/liner3"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@color/gray1"/>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/lc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/xian4"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="@string/banliliuchhengg" />

    <LinearLayout
        android:id="@+id/liner4"
        android:padding="5dp"
        android:layout_below="@+id/lc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <RelativeLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/beijing"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="申请贷款"
                 android:textSize="11sp"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="8dp"
                 android:textColor="@color/colorAccent"
                 />
         </RelativeLayout>
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/jiantou"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beijing"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话初审"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorAccent"
                />
        </RelativeLayout>
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/jiantou"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beijing"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款处理"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorAccent"
                />
        </RelativeLayout>
        <ImageView
            android:layout_weight="0.5"
            android:src="@drawable/jiantou"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beijing"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请放贷"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorAccent"
                />
        </RelativeLayout>
    </LinearLayout>
     <View
         android:id="@+id/xian5"
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="@color/gray1"
         android:layout_below="@+id/liner4"/>
    <TextView
        android:id="@+id/tiaojian"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian5"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="@string/shenqingtiaojian" />
    <LinearLayout
        android:layout_below="@+id/tiaojian"
        android:id="@+id/liner6"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nainliangyaoqiu"
            />
        <TextView
            android:id="@+id/nl_yaoyiu"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18岁以上"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/liner6"
        android:id="@+id/liner7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hujiyaoqiu"
            />
        <TextView
            android:id="@+id/hj_yaoqiu"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国大陆"
            />
    </LinearLayout>
    <View
        android:id="@+id/xian6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray1"
        android:layout_below="@+id/liner7"/>
    <TextView
        android:id="@+id/cailiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian6"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="@string/suoxuecailiao" />

        <TextView
            android:id="@+id/sx_cailiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cailiao"
            android:text="身份证、户口本"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="14sp"
            />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
                  android:layout_height="50dip"
                  android:orientation="horizontal"
    >
        <Button
            android:id="@+id/btn_call"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="カスタマーサービス"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:textSize="16sp"
        />
        <Button
        android:id="@+id/shenqing"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="@string/lijishenqing"
        android:textColor="@color/white"
        android:background="#d79369"
        android:textSize="16sp"
    />
    </LinearLayout>

    <ImageView
        android:layout_marginRight="15dip"
        android:id="@+id/kefu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kefu"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dip"
        />
</RelativeLayout>
