<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.japanhouse.fragment.home.ui.activity.QuizActivity">
    <RelativeLayout
        android:id="@+id/liner"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_beak"
            android:src="@drawable/img_beak"
            android:layout_width="20dp"
            android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提问"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/white"
                />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray1"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <EditText
            android:id="@+id/ed_wen_title"
            android:textColor="@color/text_black"
            android:layout_margin="15dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问答标题内容"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
              android:background="@color/gray1"
            />
        <EditText
            android:textSize="14sp"
            android:id="@+id/ed_wen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的问题"
            android:background="@null"
            android:layout_margin="15dp"
            />
    </LinearLayout>
      <Button
          android:id="@+id/tijiao"
          android:textSize="16sp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="提交"
          android:textColor="@color/white"
          android:layout_marginTop="30dp"
           android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@drawable/shape_tijiao"
          />

</LinearLayout>
