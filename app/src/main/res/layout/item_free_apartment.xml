<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_apartment_Img"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/apartment_icon"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="#33000000"
            />
        
        <TextView
            android:id="@+id/item_apartment_num"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#33000000"
            android:layout_alignBottom="@id/item_apartment_Img"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:drawableLeft="@drawable/free_apartment_num"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerInParent="true"
            android:background="@drawable/item_free_apartment_rent"
            android:text="@string/item_free_apartment_sale"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_apartment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/item_apartment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="14sp"
            android:drawableLeft="@drawable/free_apartment_time"
            android:drawablePadding="10dp"
            />

        <TextView
            android:id="@+id/item_apartment_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#EDEDED"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_apartment_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/item_apartment_phone"
            android:textColor="#FE972A"
            android:textSize="14sp"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:background="#E5E5E5"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/item_apartment_signUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/item_apartment_signUp"
            android:textColor="#FE972A"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>