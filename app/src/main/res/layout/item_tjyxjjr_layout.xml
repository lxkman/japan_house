<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_huise_line"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.administrator.japanhouse.view.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/deful_touxiang"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="杨金金"
                android:textColor="@color/text_black"/>
        </LinearLayout>
        <com.example.administrator.japanhouse.view.RatingBarView
            android:id="@+id/ratingBarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="主营：昌平昌平沙河"
            android:textColor="@color/text_gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lookmore"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_huise_line"
        android:gravity="center"
        android:padding="10dp"
        android:text="查\n看\n全\n部"
        android:textColor="@color/shihuangse"
        android:textSize="14sp"
        android:visibility="gone"/>
</LinearLayout>