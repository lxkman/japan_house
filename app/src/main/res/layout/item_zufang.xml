<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!--<com.overseas.overseas.view.SlidingMenu-->
    <!--android:id="@+id/slidingMenu"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->
    <LinearLayout
        android:id="@+id/layout_all_height"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dip">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dip">
            <ImageView
                android:id="@+id/img_house"
                android:src="@drawable/house"
                android:layout_marginLeft="15dip"
                android:layout_gravity="center_vertical"
                android:layout_width="132dip"
                android:scaleType="fitXY"
                android:layout_height="90dip" />
            <LinearLayout
                android:layout_marginLeft="10dip"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_house_name"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dip"
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:text="泰和·金府大厦"
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dip">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_marginTop="2dip"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dip"
                            >
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/dingwei"
                                android:layout_width="15dip"
                                android:layout_height="15dip" />
                            <TextView
                                android:id="@+id/tv_house_address"
                                android:gravity="center_vertical"
                                android:textSize="13sp"
                                android:text="东京"
                                android:singleLine="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="2dip"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="20dip"
                            >
                            <TextView
                                android:id="@+id/tv_house_room"
                                android:gravity="center_vertical"
                                android:textSize="13sp"
                                android:text="3室1厅"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/tv_house_area"
                                android:layout_marginLeft="10dip"
                                android:gravity="center_vertical"
                                android:textSize="13sp"
                                android:text="175㎡"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_marginRight="10dip"
                        android:textColor="@color/shihuangse"
                        android:textSize="14sp"
                        android:text="1750元/月"
                        android:gravity="center"
                        android:layout_width="80dip"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dip">
                    <TextView
                        android:id="@+id/tv_intro1"
                        android:textSize="12sp"
                        android:textColor="#cca18a"
                        android:padding="3dip"
                        android:background="@drawable/round_pick"
                        android:gravity="center"
                        android:text="安全性高"
                        android:layout_width="wrap_content"
                        android:layout_height="21dip" />
                    <TextView
                        android:id="@+id/tv_intro2"
                        android:textSize="12sp"
                        android:textColor="#cca18a"
                        android:layout_marginLeft="15dip"
                        android:padding="3dip"
                        android:background="@drawable/round_pick"
                        android:gravity="center"
                        android:text="低密度"
                        android:layout_width="wrap_content"
                        android:layout_height="21dip" />
                    <TextView
                        android:id="@+id/tv_intro3"
                        android:textSize="12sp"
                        android:textColor="#cca18a"
                        android:layout_marginLeft="16dip"
                        android:padding="3dip"
                        android:background="@drawable/round_pick"
                        android:gravity="center"
                        android:text="南北通透"
                        android:layout_width="wrap_content"
                        android:layout_height="21dip" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <!--</com.overseas.overseas.view.SlidingMenu>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"></View>

</LinearLayout>