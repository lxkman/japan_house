<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_zuijin_layout"
    >

    <LinearLayout
            android:id="@+id/layout_all_height"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dip">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dip">
                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dip"
                    android:layout_width="132dip"
                    android:layout_height="90dip" >
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/img_house"
                        android:background="@drawable/house"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_video_logo"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_vedio_icon_iv"
                        android:layout_gravity="center"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_house_name"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dip"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:text="泰和·金府大厦"
                        android:layout_width="match_parent"
                        android:layout_height="20dip"
                        />
                    <LinearLayout
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dip"
                        >
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dingwei"
                            android:layout_width="15dip"
                            android:layout_height="15dip" />
                        <TextView
                            android:id="@+id/tv_house_address"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="东京"
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_marginRight="10dip"
                            android:textColor="@color/shihuangse"
                            android:textSize="16sp"
                            android:text="17500万"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20dip"
                        >
                        <TextView
                            android:id="@+id/tv_house_room"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="3室1厅"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_house_area"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:text="175㎡"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>

</LinearLayout>