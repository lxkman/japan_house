<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/shihuangse"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:layout_weight="1"
            android:background="@drawable/round_white">

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:src="@drawable/sousuo" />

            <EditText
                android:id="@+id/act_search_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qingshurujingjirennamehuophone"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/quxiao"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>


    <!--<com.example.administrator.japanhouse.view.SwitchButton-->
    <!--android:id="@+id/sb_xxtz"-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="30dp"-->
    <!--app:sb_checked="true"-->
    <!--app:sb_show_indicator="false"-->
    <!--app:sb_uncheck_color="#fff"-->
    <!--app:sb_checked_color="#FFF8B702"-->
    <!--android:layout_alignParentTop="true"-->
    <!--/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/act_singUp_springView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_list_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </com.liaoinstan.springview.widget.SpringView>

        <TextView
            android:id="@+id/tv_noContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/meiyousousuojieguo"
            android:textColor="@color/text_black"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>