<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_my_data"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/huise"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/shihuangse"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:padding="15dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/gerenxinxi"
            android:textColor="#fff"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:padding="13dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip"
        android:background="#fff"
        android:paddingLeft="10dip">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/touxiang"
            android:textColor="#444"
            android:textSize="16sp"/>
        <com.example.administrator.japanhouse.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/deful_touxiang"/>
        <ImageView
            android:id="@+id/iv_select_photo"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/gengduo"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#fff"
        android:paddingLeft="10dip">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/nicheng"
            android:textColor="#444"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:cursorVisible="false"
            android:minWidth="100dp"
            android:text="sense"
            android:maxLength="20"
            android:textSize="15dip"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#fff"
        android:paddingLeft="10dip">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/xingbie"
            android:textColor="#444"
            android:textSize="16sp"/>
        <LinearLayout
            android:id="@+id/ll_man"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="25dip"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_man"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/tab_housing_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="@string/man"
                android:textColor="#333"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_woman"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dip"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_woman"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/tab_housing_selector"
                android:button="@null"
                android:clickable="false"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="@string/woman"
                android:textColor="#333"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#fff"
        android:paddingLeft="10dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/birthday"
            android:textColor="#444"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dip"
            android:gravity="center|right"
            android:textSize="15dip"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:text="@string/accountbind"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#fff"
        android:paddingLeft="10dip">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/phonebind"
            android:textColor="#444"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="@string/yibangding"
            android:textSize="15dip"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="18888888888"
            android:textSize="15dip"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#eee"></View>
</LinearLayout>
