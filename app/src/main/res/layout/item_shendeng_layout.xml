<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
>
    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/shendeng_bg">
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_tupian"
                android:layout_width="110dp"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/test_tjesf_iv"/>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="#30000000"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:text="整租"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/frame"
            android:text="泰和·金府大厦"
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/frame"
            android:drawableLeft="@drawable/home_map_like_iv"
            android:drawablePadding="5dp"
            android:text="东京"/>
        <TextView
            android:id="@+id/tv_ting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_area"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/frame"
            android:text="2室一厅"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_mianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_area"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_ting"
            android:text="175㎡"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="17500元/㎡"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_lookmore"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="@drawable/shendeng_more_bg"
        android:ems="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="再\n次\n查\n找"
        android:textColor="@color/shihuangse"
        android:textSize="14sp"
        android:visibility="gone"/>
</LinearLayout>