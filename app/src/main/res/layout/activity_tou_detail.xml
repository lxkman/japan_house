<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.haiwai.administrator.japanhouse.fragment.home.ui.activity.TouDetailActivity">
    <RelativeLayout
        android:id="@+id/liner"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_beak"
            android:src="@drawable/img_beak"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xiangqing"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <View
        android:id="@+id/xian"
        android:layout_below="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray1"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nor"
        android:layout_above="@+id/line1"
        android:layout_below="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:focusable="true"
        android:focusableInTouchMode="true"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_margin="10dp"
               android:textColor="#000"
               android:textSize="16sp"
               android:id="@+id/title"
               android:text="动态标题内容，标题，标题"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_marginLeft="10dp"
                   android:textSize="16sp"
                   android:text="2018.01.11  14:20:30"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/time"
                   />
           </LinearLayout>
           <WebView
               android:id="@+id/webView"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="10dp"
               android:background="@color/gray1"/>


           <LinearLayout
               android:padding="10dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_marginTop="3dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/huifu_3xxx"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:text="@string/quanbuhuifu"
                   android:textColor="@color/black"
                   android:textSize="16sp" />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:background="@color/gray1"/>

             <android.support.v7.widget.RecyclerView

                 android:id="@+id/detail_recy"
                 android:layout_margin="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
       </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <View
        android:id="@+id/xian1"
        android:layout_width="match_parent"
        android:layout_below="@+id/nor"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray1"/>
    <RelativeLayout
        android:id="@+id/line1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
       <TextView
           android:layout_marginLeft="10dip"
           android:id="@+id/send"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/rc_ext_send"
           android:textSize="16sp"
           android:layout_centerVertical="true"
           android:textColor="@color/colorAccent"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           />
      <ImageView
          android:visibility="gone"
          android:id="@+id/biaoqing"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/xiaolian"
          android:layout_toLeftOf="@+id/send"
          android:layout_centerVertical="true"
          android:layout_margin="10dp"
          />
      <LinearLayout
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:background="@drawable/ed_shape"
         android:layout_marginLeft="10dp"
          android:layout_toLeftOf="@+id/biaoqing"
          android:layout_centerVertical="true"
          android:layout_width="match_parent"
          android:layout_height="30dp">
       <EditText
           android:layout_marginLeft="10dp"
           android:layout_gravity="center_vertical"
           android:id="@+id/ed_pinglun"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@null"
           android:hint="@string/qingshurupinlunneirong"
           android:textSize="14sp"
           />

      </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
