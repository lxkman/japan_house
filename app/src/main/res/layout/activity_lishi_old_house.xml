<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lishi_new_house"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    tools:context=".fragment.comment.NewHousedetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">


            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="255dip"
                    android:background="@color/shihuangse">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_vidio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="65dip"
                            android:layout_height="50dip"
                            android:src="@drawable/touming" />

                        <TextView
                            android:id="@+id/tv_to_num"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/tv_suiyi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dip"
                            android:layout_toRightOf="@id/tv_to_num"
                            android:gravity="center"
                            android:text="/"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/tv_all_num"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/tv_suiyi"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="#fff" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_details_name"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dip"
                        android:text="泰和·金府大厦"
                        android:textColor="#333"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#eee"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dip"
                        android:text="@string/old_house_price"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_details_price"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="17500元/㎡"
                        android:textColor="@color/shihuangse"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_See_More"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dip"
                        android:text="@string/see_more"
                        android:textColor="#888"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dip"
                        android:src="@drawable/gengduo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dip"
                        android:text="@string/old_house_mianji"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_details_area"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="175㎡"
                        android:textColor="#333"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#eee"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:src="@drawable/dingwei" />

                    <TextView
                        android:id="@+id/tv_details_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dip"
                        android:text="东京-西马地铁口200米"
                        android:textColor="#333"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#eee"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dip"
                    android:text="@string/huxingtu" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/Huxing_Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:descendantFocusability="afterDescendants"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dip"
                    android:text="@string/new_house_zhoubian"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:background="@drawable/bg_map"
                    android:layout_width="match_parent"
                    android:layout_height="120dip">
                    <com.baidu.mapapi.map.MapView
                        android:id="@+id/bmapView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/shop_layout"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:src="@drawable/shangchang" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/new_house_shop"
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/school_layout"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:src="@drawable/xuexiao" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/new_house_school"
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/youeryuan_layout"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:src="@drawable/youeryuan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/new_house_youeryuan"
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/yiyuan_layout"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:src="@drawable/yiyuan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/new_house_yiyuan"
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dip"
                    android:background="#eee"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginTop="10dip"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/shihuangse"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="2dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:background="@color/shihuangse"></View>

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cainixihuan"
                        android:textColor="#333"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="2dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:background="@color/shihuangse"></View>

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/shihuangse"
                        android:textSize="16sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/love_Recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"></android.support.v7.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="10dip"
                    android:background="#eee"></View>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:paddingLeft="10dip">

                <com.example.administrator.japanhouse.view.CircleImageView
                    android:id="@+id/tv_details_manager_head"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:padding="5dip"
                    android:src="@drawable/deful_touxiang" />

                <TextView
                    android:id="@+id/tv_details_manager_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="杨金金"
                    android:textColor="#333"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#c79880">

                <TextView
                    android:id="@+id/lishi_old_wl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:text="@string/weiliao"
                    android:textColor="#fff"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#d79369">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:text="@string/dianhua"
                    android:textColor="#fff"
                    android:textSize="14dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:paddingTop="20dip"
        android:id="@+id/re_top_bg"
        android:layout_width="match_parent"
        android:layout_height="70dip">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:padding="15dip"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:padding="14dip"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/img_start"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:padding="14dip"
            android:src="@drawable/shoucang" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:text="房源详情"
            android:paddingTop="18dip"
            android:layout_width="wrap_content"
            android:layout_height="50dip" />
    </RelativeLayout>
</RelativeLayout>
