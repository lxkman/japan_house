<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_tupian"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:src="@drawable/test_tjesf_iv"
            android:layout_margin="15dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_tupian"
            android:text="泰和·金府大厦"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东京"
            android:drawableLeft="@drawable/home_map_like_iv"
            android:drawablePadding="5dp"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@+id/iv_tupian"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_mianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150㎡ - 175㎡"
            android:textColor="@color/gray"
            android:layout_below="@+id/tv_area"
            android:layout_toRightOf="@+id/iv_tupian"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17500元/㎡"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
</LinearLayout>