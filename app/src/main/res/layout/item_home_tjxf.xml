<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_tupian"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/test_tjxf_iv"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:background="#30000000">
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东京"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/home_location_white_iv"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_mianji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150-175㎡"
                    android:textColor="@color/white"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泰和丶金福大厦"
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17500元/㎡"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_tjxf_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"/>
</LinearLayout>