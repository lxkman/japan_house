<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#fff"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imag_tou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:src="@drawable/fangwu_xxxp"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imag_tou"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tou_neirong"
            android:maxLines="2"
            android:textSize="14sp"
            android:text="百科标题内容百科标题内容百科标题内容百科标题内容百科标题内容..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:gravity="center|left"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/shijian"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/imag_tou"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imag_tou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tou_time"
        android:text="01.22"
        />



    <TextView
        android:gravity="center|left"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/chakan"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/imag_tou"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tou_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person"
        android:text="1000人查看"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray1"
        android:layout_below="@+id/imag_tou"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
